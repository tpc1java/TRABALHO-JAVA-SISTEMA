import javax.swing.JOptionPane;

public class Menu {

    public static void main(String[] args) {
    byte opcion=0;
    
    do{
    opcion=Byte.parsetByte(JOptionPane.showInputDialog(
    "MENU PRINCIPAL\n" 
     
    + "1. cadastro\n"
    + "2. editar\n"
    + "3. consulta\n"
    + "4. registro\n"
    + "5. sair\n"
    + "Escolha uma Opcao"));
    
    switch(opcao){
     case 1:
     JOptionPane.showMessageDialog(null, "cadastro");
       break;
      case 2:
      JOptionPane.showMessageDialog(null, "editar");
       break;
      case 3:
      JOptionPane.showMessageDialog(null, "consulta");
       break;
      case 4:
      JOptionPane.showMessageDialog(null, "registro");
       break;
      case 5:
      JOptionPane.showMessageDialog(null, "sair");
       break;
       default:
       JOptionPane.showMessageDialog(null, "Opcion Invalida");
       break; 
         }
       }while(opcao!=5);
      }
    }
